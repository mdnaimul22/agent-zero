{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "target": "ES2019",
        "lib": [
            "ES2019"
        ],
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "nodes/**/*.ts",
        "credentials/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}